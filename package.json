{
  "name": "smart-contract-test",
  "version": "1.0.1",
  "description": "Smart Contract test",
  "license": "UNLICENSED",
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "engines": {
    "node": ">=10.5.0"
  },
  "scripts": {
    "console": "truffle console --network development",
    "bridge": "node ../ethereum-bridge/bridge -a 9 -H 127.0.0.1 -p 9545 --dev",
    "test": "truffle test",
    "develop": "truffle develop",
    "compile": " truffle compile",
    "migrate": " truffle migrate --network development",
    "migrate:testnet": " truffle migrate --reset --network rinkeby",
    "migrate:mainnet": " truffle migrate --network rinkeby",
    "solhint": "node ./node_modules/solhint/solhint.js contracts/*.sol",
    "solium": "solium -d contracts/",
    "precommit": "npm run coverage && npm run solium",
    "test:ci": "./node_modules/.bin/run-with-ganache 'npm run coverage && npm run test' && npm run solium",
    "rmd": "remixd -s /var/www/clintex.contracts.new/ --remix-ide https://remix.ethereum.org"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "remixd": "0.1.8-alpha.14",
    "dotenv": "^6.2.0",
    "mz": "^2.7.0",
    "solium-plugin-consensys": "^0.0.0",
    "@openzeppelin/upgrades": "^2.7.1",
    "@truffle/hdwallet-provider": "^1.0.30",
    "ethereumjs-util": "^6.0.0",
    "run-with-ganache": "^0.1.1",
    "truffle": "^5.1.12",
    "truffle-export-abi": "^1.0.1",
    "web3": "1.0.0-beta.41",
    "web3-utils": "1.0.0-beta.41"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^2.5.0",
    "@openzeppelin/test-helpers": "^0.5.4",
    "any-promise": "^1.3.0",
    "bignumber.js": "^9.0.0",
    "bindings": "^1.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eth-gas-reporter": "^0.1.12",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-testrpc": "^6.0.3",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "remixd": "^0.1.8-alpha.14",
    "solhint": "^2.3.0",
    "solidity-coverage": "^0.7.4",
    "solium": "^1.2.5"
  }
}
